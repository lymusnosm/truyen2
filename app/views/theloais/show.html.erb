<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script type="text/javascript" src="http://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css"
  rel="stylesheet" type="text/css">
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-97841360-1', 'auto');
  ga('send', 'pageview');

  </script>
</head>

<body>
  <body>
    
    <div class="section">

      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <h1 class="text-left">
              <i class="fa fa-3x fa-fw fa-book"></i>
              <b>
                <i>Truyện Song Ngữ Anh-Việt</i>
              </b>
            </h1>
          </div>
          <div class="row">
            <div class="col-md-12">
              <hr>
            </div>
            <p class="lead"><%=@theloai.title%></p>
          </div>
        </div>
      </div>

      <% @truyens.each do |t|%>
      <div class="section">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <a href="<%=truyen_path(t)%>" title="<%= truncate t.content_vn, length: 400 %>"><img src="<%=t.image%>"
                class="img-responsive"></a>
              </div>
              <div class="col-md-3">
                <h1><a href="<%=truyen_path(t)%>" title="<%= truncate t.content_vn, length: 400 %>"><%= t.name_vn %></a></h1>
                <p><%= truncate t.content_vn, length: 200 %></p>
              </div>
              <div class="col-md-3">
                <h1><a href="<%=truyen_path(t)%>" title="<%= truncate t.content_vn, length: 400 %>"><%= t.name_en %></a></h1>
                <p><%= truncate t.content_en, length: 200 %></p>
              </div>
              <div class="col-md-2"><p class="text-right"><p>Cập Nhật</p><%="#{time_ago_in_words(t.updated_at.in_time_zone(7))} ago"%></p></div>
            </div>
          </div>
        </div>
        <%end%>

        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <hr>
            </div>
            <p>FAM-Truyện Song Ngữ</p>
          </div>
        </div>

      </div>

    </body>
    </html>
