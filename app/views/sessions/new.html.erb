<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script type="text/javascript" src="http://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.min.css"
  rel="stylesheet" type="text/css">
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-97841360-1', 'auto');
  ga('send', 'pageview');

  </script>

</head>

<body>

  <div class="section">

    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1 class="text-left">
            <i class="fa fa-3x fa-fw fa-book"></i>
            <b>
              <i class="">Truyện Song Ngữ Anh-Việt</i>
            </b>
          </h1>
        </div>
        <div class="row">
          <div class="col-md-12">
            <hr>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">Truyện Song Ngữ</h1>
          <h2 class="text-center">Đăng Nhập</h2>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="col-md-12">
        <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
          <div class="container">
            <div class="col-sm-4 text-right">
              <label class="control-label">EMAIL</label>
            </div>
            <div class="col-sm-4">
              <%= f.email_field :email, :placeholder => "EMAIL" ,class: "form-control"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="container">
            <div class="col-sm-4 text-right">
              <label class="control-label">MẬT KHẨU</label>
            </div>
            <div class="col-sm-4">
              <%= f.password_field :password, :placeholder => "PASSWORD" ,class: "form-control"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="text-center">
            <%= f.submit "ĐĂNG NHẬP", class: "btn btn-default" %>
            <a href="<%=signup_path%>" class="btn btn-default">ĐĂNG KÝ</a>
          </div>
          </div>
          <%end%>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <hr>
          </div>
          <p>FAM-Truyện Song Ngữ</p>
        </div>
      </div>

    </div>

  </body>
  </html>
